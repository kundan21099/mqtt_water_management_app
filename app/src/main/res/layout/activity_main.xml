<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flow Rate="
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:layout_below="@+id/text1"
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume="
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/text3"
                android:layout_below="@id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level="
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:paddingBottom="15dp"/>

            <TextView
                android:id="@+id/flowA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="41dp"
                android:layout_toRightOf="@+id/text1"
                android:text="A"
                android:textSize="15dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/volumeA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/text2"
                android:text="A"
                android:textSize="15dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/levelA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="112dp"
                android:layout_marginTop="-2dp"
                android:layout_toRightOf="@+id/text3"
                android:paddingBottom="15dp"
                android:text="A"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/flowB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="74dp"
                android:layout_toRightOf="@+id/flowA"
                android:text="B"
                android:textSize="15dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/volumeB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_marginLeft="76dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/volumeA"
                android:paddingBottom="10dp"
                android:text="B"
                android:textSize="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L/min"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/flowB"
                android:layout_marginLeft="60dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/volumeB"
                android:layout_below="@id/flowB"
                android:layout_marginLeft="60dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/volumeB"
                android:layout_marginLeft="225dp"
                android:layout_marginTop="-5dp"
                android:layout_toRightOf="@+id/text3"
                android:paddingBottom="15dp"
                android:text="cm"
                android:textSize="15dp" />

            <Switch
                android:id="@+id/valveA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/levelA"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="20dp"
                android:text="Valve A"
                android:textSize="15dp" />

            <Switch
                android:id="@+id/valveB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="2dp"
                android:text="Valve B"
                android:textSize="15dp"
                android:paddingBottom="20dp"/>
        </RelativeLayout>

        <LinearLayout
            android:paddingTop="20dp"
            android:id="@+id/linear"
            android:layout_below="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingTop="20dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingTop="20dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingTop="20dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart4"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingTop="20dp"/>
        </LinearLayout>

        <RelativeLayout
            android:paddingTop="30dp"
            android:id="@+id/relative2"
            android:layout_below="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/disconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnect"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:paddingBottom="15dp"/>
            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Data"
                android:textSize="15dp"
                android:layout_below="@+id/disconnect"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </RelativeLayout>
